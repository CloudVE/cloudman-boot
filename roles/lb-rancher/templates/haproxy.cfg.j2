global
  maxconn 4096
  ssl-server-verify none

defaults
  mode tcp
  balance roundrobin
  option redispatch
  option forwardfor

  timeout connect 5s
  timeout queue 5s
  timeout client 36000s
  timeout server 36000s

frontend https-in
  bind *:443 ssl crt /usr/local/etc/haproxy/ssl/haproxy.pem
  default_backend rancher_servers_ssl

  acl is_websocket hdr(Upgrade) -i WebSocket
  acl is_websocket hdr_beg(Host) -i ws
  use_backend rancher_servers_ssl if is_websocket

frontend http-in
  bind *:80
  mode http
  default_backend rancher_servers

  acl is_websocket hdr(Upgrade) -i WebSocket
  acl is_websocket hdr_beg(Host) -i ws
  use_backend rancher_servers if is_websocket

backend rancher_servers
  mode http
{% for host in groups['HA-Nodes'] %}
  server {{ host }} {{ hostvars[host]['ansible_ssh_host'] }}:80 weight 1 maxconn 1024
{% endfor %}

backend rancher_servers_ssl
  mode tcp
{% for host in groups['HA-Nodes'] %}
  server {{ host }} {{ hostvars[host]['ansible_ssh_host'] }}:443 weight 1 maxconn 1024 ssl
{% endfor %}
